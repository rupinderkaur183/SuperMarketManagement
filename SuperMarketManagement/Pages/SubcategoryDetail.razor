@page "/subcategory-detail/{subcategoryId}"

@inherits AddSubcategoryBase.AddSubcategoryBase


@code {
    [Parameter]
    public string? subcategoryId { get; set; }
}

@{

    var id = Convert.ToInt32(subcategoryId);
    var subcategory = getSubcategoryByID(id);
}


<PageTitle>subcategory Detail</PageTitle>

<div class="container">
    <div class="text-center">
        <img src="/images/@subcategory.SubcategoryImage" style="width:30%" alt=">@subcategory.SubcategoryName" title="@subcategory.SubcategoryName" />
        <div class="subcategory-title">@subcategory.SubcategoryName</div>
        <div class="price">@subcategory.SubcategoryPrice</div>
    </div>
    <div class="row">
        <div class="col-md-6 text-end">
            <label>Quantity</label>
        </div>
        <div class="col-md-2 text-start">
            <input type="number" class="form-control" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 text-end">
        </div>
        <div class="col-md-2 text-start">
            <button class="btn btn-primary">Add </button>
        </div>

    </div>
</div>

